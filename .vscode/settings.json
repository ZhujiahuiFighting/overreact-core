{
	"editor.renderWhitespace": "trailing",
	"editor.tabSize": 2,
	"editor.insertSpaces": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
	"files.trimTrailingWhitespace": true,
	"[markdown]": {
	  "files.trimTrailingWhitespace": false,
	},
	"search.exclude": {
	  "**/node_modules": true,
	  "**/dist": true
	}
}
